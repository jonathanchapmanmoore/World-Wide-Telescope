<UserControl x:Class="Renci.Wwt.DataManager.Filters.Views.BoundCircleFilterWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vw="clr-namespace:Renci.Wwt.DataManager.Filters.Views"
             xmlns:vm="clr-namespace:Renci.Wwt.DataManager.Filters.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl Margin="3">
        <TabItem Header="Properties" >
            <ContentControl Content="{Binding}" >
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <vw:FilterPropertiesView />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </TabItem>
        <TabItem Header="Location" >
            <ContentControl Content="{Binding}" >
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <vw:FilterMapView />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
            
        </TabItem>
    </TabControl>
</UserControl>
