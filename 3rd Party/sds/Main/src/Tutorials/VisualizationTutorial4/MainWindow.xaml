<Window x:Class="VisualizationTutorial4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dsv="clr-namespace:Microsoft.Research.Science.Data.Viewer;assembly=DataSetViewerControls"
    Title="Dynamic dataset sample" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <dsv:DataSetViewerControl Name="dsvc"/>
        <Button Name="button" Grid.Row="1" Margin="5,5,5,5" HorizontalAlignment="Center" Width="100" Click="Button_Click">Start!</Button>
    </Grid>
</Window>

